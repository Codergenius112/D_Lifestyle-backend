{
  "name": "dlifestyle-backend",
  "version": "1.0.0",
  "description": "Production-ready backend for D'Lifestyle platform",
  "author": "D'Lifestyle Team",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main",
    "dev": "nest start --watch",
    "build": "nest build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config ./test/e2e/jest-e2e.json",
    "db:migration:generate": "typeorm migration:generate -d dist/database/data-source.js",
    "db:migrate": "typeorm migration:run -d dist/database/data-source.js",
    "db:migration:create": "typeorm migration:create",
    "db:seed": "node dist/database/seeds/index.js",
    "db:drop": "typeorm schema:drop -d dist/database/data-source.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -f docker/Dockerfile -t dlifestyle-backend:latest .",
    "docker:dev": "docker-compose -f docker/docker-compose.yml up",
    "docker:prod": "docker-compose -f docker/docker-compose.prod.yml up -d"
  },
  "dependencies": {
    "@nestjs/bull": "^10.2.3",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^6.1.1",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/websockets": "^10.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "aws-sdk": "^2.1500.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "helmet": "^7.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.0",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "socket.io": "^4.7.0",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.16",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  }
}
